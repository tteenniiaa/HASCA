<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="h.tenia.humansmokingcapacity.Gejala">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Diagnosa"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:alpha="0.2"
        android:scaleType="fitEnd"
        android:src="@drawable/bg_partial_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/hslBtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Paru-paru"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Kandung Kemih"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Payudara"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Serviks"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Kerongkongan"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Pencernaan"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Ginjal"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kanker Mulut"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Serangan Jantung"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hipertensi"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Impotensi"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/hslBtn12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paru Obstruksi"
                android:background="@drawable/bg_item"/>

            <Button
                android:id="@+id/btnmenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Menu"
                android:background="@drawable/bg_item"/>

        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>