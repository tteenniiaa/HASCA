<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#71cfdf"/>
            <stroke android:color="#50def1" android:width="1dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#69cbd6"/>
            <stroke android:color="#b7faf8" android:width="1dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>

</selector>